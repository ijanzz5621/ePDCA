<form id="formDepartment" method="post" action="/admin/department/add-edit-department">

    <div id="modal-add-department" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add / Edit Department</h4>
                </div>
                <div class="modal-body row">

                    <div class="form-group col-md-6">
                        <label for="ddlCompany">Company</label>
                        <select id="ddlCompany" class="form-control" name="ddlCompany">
                        <option value="">-- Please Select --</option>
                        {{#each companyList}}
                            <option value="{{CompanyCode}}">{{ CompanyName }}</option>
                        {{/each}}
                        </select>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="txtDepartmentCode">Department Code</label>
                        <input type="text" class="form-control" name="txtDepartmentCode" id="txtDepartmentCode" placeholder="Department Code">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="txtDepartmentName">Department Name</label>
                        <input type="text" class="form-control" name="txtDepartmentName" id="txtDepartmentName" placeholder="Department Name">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="radioStatus">Status</label>
                        <br/>
                        <div id="radioStatus" class="btn-group" data-toggle="buttons">
                            <label id="lblStatusActive" class="btn btn-default">
                                    <input type="radio" name="rbStatus" id="rbStatusActive" value="Active"  /> Active
                                </label>
                            <label id="lblStatusNotActive" class="btn btn-default">
                                    <input type="radio" name="rbStatus" id="rbStatusNotActive" value="NotActive" /> Not Active
                                </label>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input id="btnSubmit" type="submit" class="btn btn-primary" value="Save Changes" />
                </div>
            </div>

        </div>

    </div>


</form>