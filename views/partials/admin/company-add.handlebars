<form method="post" action="/admin/company/add-edit-company">

    <div id="modal-add-company" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add / Edit Company</h4>
                </div>
                <div class="modal-body row">

                    <div class="form-group col-md-6">
                        <label for="txtCompanyCode">Company Code</label>
                        <input type="text" class="form-control" name="txtCompanyCode" id="txtCompanyCode" placeholder="Company Code">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="txtCompanyName">Company Name</label>
                        <input type="text" class="form-control" name="txtCompanyName" id="txtCompanyName" placeholder="Company Name">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="radioStatus">Status</label>
                        <br/>
                        <div id="radioStatus" class="btn-group" data-toggle="buttons">
                            <label class="btn btn-default checked">
                                    <input type="radio" name="rbStatus" id="rbStatusActive" value="Active"  /> Active
                                </label>
                            <label class="btn btn-default">
                                    <input type="radio" name="rbStatus" id="rbStatusNotActive" value="NotActive" /> Not Active
                                </label>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" value="Save Changes" />
                </div>
            </div>

        </div>

    </div>


</form>