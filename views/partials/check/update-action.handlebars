<form id="formCheckUpdateAction" class="msform" method="post" action="" style="text-align:left;">

    <div id="modal-check-update-action" class="modal fade" tabindex="-1" role="dialog" style="margin-top: 45px !important;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Check Action</h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-12">
                            <label for="modal-check-updateAction-txtActionName">Action Name</label>
                            <textarea rows="5" id="modal-check-updateAction-txtActionName" name="modal-check-updateAction-txtActionName" style="width:100%;" required="required"></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label for="modal-check-updateAction-ddlAssignTo">Effective</label>
                             <select style="width:100%; height:50px;" name="modal-check-updateAction-ddlAssignTo" id="modal-check-updateAction-ddlAssignTo">
                                <option value="" selected="selected" data-description="Choose person to assign the action">-- Please Select --</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label for="fupSupportingData">Supporting Data</label>
                            <input type="file" id="fupSupportingData" style="width:100%" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label for="modal-check-updateAction-txtWhyNotAffective">If not affective, why?</label>
                            <textarea rows="5" id="modal-check-updateAction-txtWhyNotAffective" name="modal-check-updateAction-txtWhyNotAffective" style="width:100%;" required="required"></textarea>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="action-button-cancel" data-dismiss="modal">Close</button>
                    <input type="button" id="modal-check-updateAction-btnSubmit" class="action-button" value="Submit" style="width:80px;" />
                </div>
            </div>
        </div>
    </div>

</form>