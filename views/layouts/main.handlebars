<html>
    <head>
        <title>ePDCA - Welcome</title>

        <link rel="stylesheet" href="/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="/css/bootstrap-theme.min.css"/>
        <link rel="stylesheet" href="/css/site.css"/>

        <script src="/js/jquery-3.2.1.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        
        <script src="/js/notify.min.js"></script>
        
        <script src="/js/site.js"></script>

    </head>

    <body>

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">ePDCA</a>
            </div>
            <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <!--<li class="active"><a href="#">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>-->
                <li class="nav-item pull-xs-right" style="color:#fff; float:right;">
                    Welcome {{username}}
                </li>
            </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.navbar -->

        <div class="row-offcanvas row-offcanvas-left">
            <div id="sidebar" class="sidebar-offcanvas">
                <div id="nav" class="col-md-12" style="padding-top:25px;">
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="/">Home / Dashboard</a></li>
                        <li><a href="/user/plan">Plan</a></li>
                        <li><a href="/user/do">Do</a></li>
                        <li><a href="/user/create">Create</a></li>
                        <li><a href="/user/action">Action</a></li>
                    </ul>
                </div>
            </div>
            <div id="main">
                <div class="col-md-12">
                    <p class="visible-xs">
                        <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas"><i class="glyphicon glyphicon-chevron-left"></i></button>
                    </p>
                    {{{body}}}
                </div>
            </div>
        </div><!--/row-offcanvas -->

        <script>
            $(document).ready(function() {
                $('[data-toggle=offcanvas]').click(function() {
                    $('.row-offcanvas').toggleClass('active');
                });

                $.notify("{{result}}", {position: "bottom-center", className:"error"});

            });

            $(function () {
                    

                    //var pgurl = window.location.href.substr(window.location.href
                    //    .lastIndexOf("/") + 1);
                    var pgurl = window.location.pathname;
                    $("#nav ul li a").each(function () {
                        if ($(this).attr("href") == pgurl || $(this).attr("href") == '')
                            //$(this).addClass("active");
                            $(this).parent().addClass("active");
                        //alert(pgurl);

                        //alert($(this).attr("href") + " - " + pgurl);
                    })
                });

        </script>


    </body>

</html>